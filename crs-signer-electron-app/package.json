  "license": "ISC",
  "description": "TCS Digital Signing Application",
  "devDependencies": {
    "electron": "^33.0.1",
    "electron-packager": "^17.1.2",
    "electron-prebuilt-compile": "8.2.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "socket.io": "^4.8.0",
    "ws": "^8.18.0"
  },
  "config": {
    "forge": {
      "makers": [
        {
          "name": "@electron-forge/maker-nsis",
          "config": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true
          }
        }
